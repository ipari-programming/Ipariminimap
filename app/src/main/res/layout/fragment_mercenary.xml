<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="110dp"
    android:padding="4dp"
    tools:context=".fragments.MercenaryFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mercFragmentCard"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        app:contentPadding="2dp">

        <TextView
            android:id="@+id/mercFragmentTextName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Csáktornyai Ádám József"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/mercFragmentTextLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lvl13 Üzemmérnök"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/mercFragmentTextAttack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:text="⚔️2" />

        <TextView
            android:id="@+id/mercFragmentTextHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="20🩸" />

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>